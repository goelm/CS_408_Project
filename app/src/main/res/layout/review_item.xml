<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <ImageView
        android:id="@+id/helpfulness_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_dialog_info"
        android:layout_below="@+id/semester_taken"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/semester_taken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester Taken"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/version_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructor: "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/helpfulness_button"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/instructor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill in here"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/reviewStars"
        android:layout_toEndOf="@+id/user_id" />

    <TextView
        android:text="TextView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/courseComment2"
        android:layout_weight="1"
        android:layout_below="@+id/instructor_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:id="@+id/reviewStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marshmallow"
        style="?android:attr/ratingBarStyleSmall"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/helpfulness_button"
        android:layout_alignStart="@+id/semester_taken" />

</RelativeLayout>