<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:padding="20dp"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="20dp"
        android:weightSum="1"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.73" />

        <TextView
            android:text="Course Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textCourseName"
            android:layout_weight="0.10"
            android:textSize="30sp"
            android:textAlignment="center" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.73" >

            <TextView
                android:text="Instructor: ?????"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textInstructor"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:text="TA: ?????"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textTA"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.49" >

        </TableRow>

        <RatingBar

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/course_rating"
            style="@style/Widget.AppCompat.RatingBar" />


        <TextView
            android:text="Course Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDescription"
            android:textAlignment="center"
            android:layout_weight="0.73" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.73">

        </TableLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="0.73" >

        </TableRow>


            <TextView
                android:text="Insert Reviews into this LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:id="@+id/textDummy"
                android:textAlignment="center" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:id="@+id/listView" />


        <!--

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.63">
            <EditText
                android:id="@+id/Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        -->
    </LinearLayout>
</ScrollView>
