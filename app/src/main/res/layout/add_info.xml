<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="20dp"
        android:weightSum="1"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.73" />

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:srcCompat="@drawable/upload_image"
        android:id="@+id/imageView3"
        android:layout_weight="0.68" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.49" >

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Firstname"
            android:ems="10"
            android:id="@+id/first_name"
            android:layout_width="1dp"
            android:layout_weight="1" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Lastname"
            android:ems="10"
            android:id="@+id/last_name"
            android:layout_width="1dp"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.68" >

        <RadioButton
            android:text="Instructor"
            android:layout_height="wrap_content"
            android:id="@+id/instructor"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <RadioButton
            android:text="TA"
            android:layout_height="wrap_content"
            android:id="@+id/teachingassistant"
            android:layout_weight="1"
            android:layout_width="wrap_content" />
    </TableRow>

        <RatingBar

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/instructor_rating"
            style="@style/Widget.AppCompat.RatingBar" />

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_info_RatingBarValue"
            android:layout_weight="0.73"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Accessibility: "
            android:textColor="@drawable/com_facebook_button_login_silver_background" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:text="Help Session Availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_weight="0.73"
            android:gravity="center"/>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="0.73" >

            <RadioButton
                android:text="Very Accessible"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ezAccess" />

            <RadioButton
                android:text="Hardly Accessible"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/hardAccess"
                android:layout_width="wrap_content"
                android:layout_weight="0.73" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lecture Quality: "
            android:textColor="@drawable/com_facebook_button_login_silver_background" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:text="How would you rate the value of the lecture content? \n(0-100)%"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="0.73"
            android:gravity="center"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekValue"
            android:layout_weight="0.73"
            android:max="100"
            android:progress="50" />

        <TextView
            android:text="50%"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textValue"
            android:layout_weight="0.73"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:text="How well can you understand the lecturer?  \n(0-100)%"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="0.73"
            android:gravity="center"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekUnderstand"
            android:layout_weight="0.73"
            android:max="100"
            android:progress="50" />

        <TextView
            android:text="50%"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textUnderstand"
            android:layout_weight="0.73"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Grades: "
            android:textColor="@drawable/com_facebook_button_login_silver_background" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:text="Any Chance For Extra Credit?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="0.73"
            android:gravity="center"/>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="0.73" >

            <RadioButton
                android:text="Yes!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yesButton1" />

            <RadioButton
                android:text="@string/No"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:id="@+id/noButton1"
                android:layout_width="wrap_content"
                android:layout_weight="0.73" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:text="Grading Toughness?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="0.73"
            android:gravity="center"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.73">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:text="Easy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diffButton1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:text="Mild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diffButton2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:text="Typical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diffButton3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:text="Tough"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diffButton4" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:text="Unreasonable!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/diffButton5" />
            </TableRow>

        </TableLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Misc: "
            android:textColor="@drawable/com_facebook_button_login_silver_background" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:text="Phones or Laptops allowed on desk?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="0.73"
            android:gravity="center"/>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="0.73" >

            <RadioButton
                android:text="Yes!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yesButton2" />

            <RadioButton
                android:text="@string/No"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:id="@+id/noButton2"
                android:layout_width="wrap_content"
                android:layout_weight="0.73" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="Comments!"
            android:gravity="center"
            android:textColor="@color/tw__composer_blue" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.73">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_weight="0.15" />
            </LinearLayout>
        </ScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />


        <Button
            android:text="@string/submit_review"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:id="@+id/submitBut"
            android:elevation="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_info_submitText"
            android:gravity="center"
            android:layout_weight="0.73" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <!--

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.63">
            <EditText
                android:id="@+id/Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        -->
    </LinearLayout>


</ScrollView>
