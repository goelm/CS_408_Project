<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:padding="20dp"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="20dp"
        android:weightSum="1"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.73" />

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:srcCompat="@drawable/upload_image"
        android:id="@+id/imageView3"
        android:layout_weight="0.68" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.49" >

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Firstname"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_width="1dp"
            android:layout_weight="1" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Lastname"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_width="1dp"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.68" >

        <RadioButton
            android:text="Instructor"
            android:layout_height="wrap_content"
            android:id="@+id/instructor"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <RadioButton
            android:text="TA"
            android:layout_height="wrap_content"
            android:id="@+id/teachingassitant"
            android:layout_weight="1"
            android:layout_width="wrap_content" />
    </TableRow>

        <RatingBar
        android:layout_width="286dp"
        android:layout_height="match_parent"
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:text="Help Session Availability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_weight="0.73"
            android:gravity="center"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="0.73" >

            <RadioButton
                android:text="Very Accessible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accessButton1" />

            <RadioButton
                android:text="Hardly Accessible"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/accessButton2"
                android:layout_width="wrap_content"
                android:layout_weight="0.73" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.73" />

        <TextView
            android:text="Any Chance For Extra Credit?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="0.73"
            android:gravity="center"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="0.73" >

            <RadioButton
                android:text="Yes!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yesButton1" />

            <RadioButton
                android:text="@string/No"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:id="@+id/noButton1"
                android:layout_width="wrap_content"
                android:layout_weight="0.73" />
        </TableRow>

        <Button
            android:text="@string/submit_review"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:id="@+id/submitBut"
            android:elevation="0dp" />


        <!--

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.63">
            <EditText
                android:id="@+id/Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        -->
    </LinearLayout>
</ScrollView>
