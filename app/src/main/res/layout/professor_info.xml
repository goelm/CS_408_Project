<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:padding="2dp"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="20dp"
        android:weightSum="1"
        android:orientation="vertical">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:srcCompat="@drawable/upload_image"
        android:id="@+id/imageView3"
        android:layout_weight="0.68" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.73" />

        <TextView
            android:text="Professor Name"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:id="@+id/textProfName"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textAllCaps="true" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.49" >

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.68" >

        <TextView
            android:text="TA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proORta"
            android:textAlignment="center" />


    </TableRow>

        <RatingBar

            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:id="@+id/instructor_rating"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar" />

        <TextView
            android:text="10 reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/num_reviews_text"
            android:textAlignment="center"
            android:layout_weight="0.73" />

        <TextView
            android:text="Lectures are valuable:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/value_lecture_heading"
            android:layout_weight="0.73" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/value_lecture_bar"
            android:layout_weight="0.73" />

        <TextView
            android:text="Professor is understandable:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/understandable_text"
            android:layout_weight="0.73" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/understandable_bar"
            android:layout_weight="0.73" />


        <TextView
            android:text="There is extra credit:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/extra_credit_text"
            android:layout_weight="0.68" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/extra_credit_bar"
            android:layout_weight="0.68" />

        <TextView
            android:text="There are help sessions:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/help_sessions_prof"
            android:layout_weight="0.68" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/help_sessions_bar"
            android:layout_weight="0.68" />


        <TextView
            android:text="Electronics are allowed:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/electronics_prof_text"
            android:layout_weight="0.68" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/electronics_prof_bar"
            android:layout_weight="0.68" />

        <TextView
            android:text="Toughness:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toughness_prof_text"
            android:layout_weight="0.68" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toughness_bar"
            android:layout_weight="0.68" />

        <TextView
            android:text="Courses Taught (and average ratings):"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/courses_taught_title"
            android:layout_weight="0.68" />

        <TextView
            android:text="COURSE 101"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/courses_taught_list"
            android:layout_weight="0.68"
            android:textSize="18sp" />

        <Button
            android:text="View Reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_reviews_button"
            android:layout_weight="0.68" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.73">

        </TableLayout>


        <Button
            android:text="add review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/professor_info_addReview"
            android:layout_weight="0.73" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="0.73" >

        </TableRow>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.68" />


        <!--

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.63">
            <EditText
                android:id="@+id/Test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        -->
    </LinearLayout>
</ScrollView>


